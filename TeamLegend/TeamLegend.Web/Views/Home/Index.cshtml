@model TeamLegend.Web.Models.Home.MatchHomeCollectionViewModel

@inject ICloudinaryService cloudinaryService
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <hr class="teamLegend-line" />
    <div class="container-fluid">
        <h2 class="text-center">Last played matches</h2>
        <div class="row d-flex justify-content-around">
            @if (Model.TopPlayedMatches == null || Model.TopPlayedMatches.Count < 1)
            {
                <h3>There are not recenlty played matches.</h3>
            }
            else
            {
                foreach (var match in Model.TopPlayedMatches)
                {
                    var homeTeam = match.HomeTeam;
                    var awayTeam = match.AwayTeam;
                    var homeTeamBadgeUrl = this.cloudinaryService.BuildTeamBadgePictureUrl(homeTeam.Name, homeTeam.BadgeVersion);
                    var awayTeamBadgeUrl = this.cloudinaryService.BuildTeamBadgePictureUrl(awayTeam.Name, awayTeam.BadgeVersion);
                    <div class="league m-3 col-md-5 col-sm-6 text-bold" style="font-size: large">
                        <div class="row d-flex align-items-center">
                            <div class="col-md-4 text-right">@homeTeam.Name</div>
                            <div class="col-md-1 text-center"><img src="@homeTeamBadgeUrl" id="fixtureTeamImg" /></div>
                            <div class="col-md-2 text-center">@match.HomeTeamGoals : @match.AwayTeamGoals</div>
                            <div class="col-md-1 text-center"><img src="@awayTeamBadgeUrl" id="fixtureTeamImg" /></div>
                            <div class="col-md-4 text-left">@awayTeam.Name</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center" style="opacity: 0.7">
                                at '@match.StadiumName'
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <hr class="teamLegend-line" />
        <h2 class="text-center">Upcoming matches</h2>
        <div class="row d-flex justify-content-around">
            @if (Model.TopComingMatches == null || Model.TopComingMatches.Count < 1)
            {
                <h3>There are not recenlty upcoming matches.</h3>
            }
            else
            {
                foreach (var match in Model.TopComingMatches)
                {
                    var homeTeam = match.HomeTeam;
                    var awayTeam = match.AwayTeam;
                    var homeTeamBadgeUrl = this.cloudinaryService.BuildTeamBadgePictureUrl(homeTeam.Name, homeTeam.BadgeVersion);
                    var awayTeamBadgeUrl = this.cloudinaryService.BuildTeamBadgePictureUrl(awayTeam.Name, awayTeam.BadgeVersion);
                    <div class="league m-3 col-md-5 col-sm-6 text-bold" style="font-size: large">
                        <div class="row d-flex align-items-center">
                            <div class="col-md-4 text-right">@homeTeam.Name</div>
                            <div class="col-md-1 text-center"><img src="@homeTeamBadgeUrl" id="fixtureTeamImg" /></div>
                            <div class="col-md-2 text-center">&ndash; : &ndash;</div>
                            <div class="col-md-1 text-center"><img src="@awayTeamBadgeUrl" id="fixtureTeamImg" /></div>
                            <div class="col-md-4 text-left">@awayTeam.Name</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center" style="opacity: 0.7">
                                at '@match.StadiumName'
                            </div>
                        </div>
                        <hr class="teamLegend-line" style="margin-top: 15px; margin-bottom: 15px" />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                Date: @match.Date.ToShortDateString()
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</main>
