@model TeamLegend.Web.Models.Home.MatchHomeCollectionViewModel
@inject ICloudinaryService cloudinaryService
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid">
        <h2 class="text-center">Last played matches</h2>
        <div class="row d-flex justify-content-around">
            @if (Model.TopPlayedMatches == null || Model.TopPlayedMatches.Count < 1)
            {
                <h3>There are not recenlty played matches.</h3>
            }
            else
            {
                foreach (var match in Model.TopPlayedMatches)
                {
                    var homeTeam = match.HomeTeam;
                    var awayTeam = match.AwayTeam;
                    <div class="league m-3 col-md-5 col-sm-6">
                        <h4 class="text-center">@homeTeam.Name <img src="@this.cloudinaryService.BuildTeamBadgePictureUrl(homeTeam.Name, homeTeam.BadgeVersion)" style="height: 25px; width: auto" /> @match.HomeTeamGoals:@match.AwayTeamGoals <img src="@this.cloudinaryService.BuildTeamBadgePictureUrl(awayTeam.Name, awayTeam.BadgeVersion)" style="width: 27px; height: 28px" /> @awayTeam.Name</h4>
                        <h5 class="text-center" style="opacity: 0.7">at '@match.StadiumName'</h5>
                    </div>
                }
            }
        </div>
        <hr class="teamLegend-line" />
        <h2 class="text-center">Upcoming matches</h2>
        <div class="row d-flex justify-content-around">
            @if (Model.TopComingMatches == null || Model.TopComingMatches.Count < 1)
            {
                <h3>There are not recenlty upcoming matches.</h3>
            }
            else
            {
                @foreach (var match in Model.TopComingMatches)
                {
                    var homeTeam = match.HomeTeam;
                    var awayTeam = match.AwayTeam;

                    <div class="league m-3 col-md-5 col-sm-6">
                        <h4 class="text-center">@homeTeam.Name <img src="@this.cloudinaryService.BuildTeamBadgePictureUrl(homeTeam.Name, homeTeam.BadgeVersion)" style="width: 27px; height: 28px" /> vs <img src="@this.cloudinaryService.BuildTeamBadgePictureUrl(awayTeam.Name, awayTeam.BadgeVersion)" style="width: 27px; height: 28px" /> @awayTeam.Name</h4>
                        <h5 class="text-center" style="opacity: 0.7">at '@match.StadiumName'</h5>
                        <hr class="teamLegend-line" />
                        <h4 class="text-center">Date: @match.Date.ToShortDateString()</h4>
                    </div>
                }
            }
        </div>
    </div>
</main>
