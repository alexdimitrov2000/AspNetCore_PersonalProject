@model TeamLegend.Web.Areas.Administration.Models.Teams.TeamEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>TeamEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label"></label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfFoundation" class="control-label"></label>
                <input asp-for="DateOfFoundation" class="form-control" />
                <span asp-validation-for="DateOfFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.BadgeUrl" style="width: 45px" />
                <label asp-for="Badge" class="control-label">Change Team Badge: </label>
                <input asp-for="Badge" />
                <span asp-validation-for="Badge" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                @Html.DropDownList(nameof(Model.Stadium),
                     Html.GetEnumSelectList<PlayingPosition>(),
                     "Select stadium", new { @class = "form-control" });
                <span asp-validation-for="DateOfFoundation" class="text-danger"></span>
            </div>*@
            <input asp-for="BadgeVersion" type="hidden" />
            <input asp-for="GoalsConceded" type="hidden" />
            <input asp-for="GoalsScored" type="hidden" />
            <input asp-for="LeagueId" type="hidden" />
            <input asp-for="StadiumId" type="hidden" />
            <input asp-for="TotalPoints" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
