@model TeamLegend.Web.Areas.Administration.Models.Stadiums.StadiumDeleteViewModel

@{
    ViewData["Title"] = "Stadium Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3">
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <h2 class="text-danger text-center">Are you sure you want to delete this?</h2>
    <hr class="teamLegend-line" />
    <div class="jumbotron">
        <h2 class="text-center">@Model.Name</h2>

        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <h3>Location: @Model.Location</h3>
                        <h3>Capacity: @Model.Capacity</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <img src="@Model.StadiumPictureUrl" class="img-fluid" style="width: 500px" />
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <form asp-area="Administration" asp-controller="Stadiums" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-teamLegend" id="deleteButton">Delete</button>
            </form>
        </div>
    </div>
</main>