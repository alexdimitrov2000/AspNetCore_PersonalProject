@model TeamLegend.Web.Areas.Administration.Models.Leagues.LeagueDeleteViewModel

@{
    ViewData["Title"] = "League Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="mt-3">
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <h2 class="text-danger text-center">Are you sure you want to delete this?</h2>
    <hr class="teamLegend-line" />
    <div class="jumbotron">
        <h2 class="text-center">@Model.Name</h2>

        <div class="row text-center">
            <div class="col-md-7">
                <h3>Country: @Model.Country</h3>
            </div>
            <div class="col-md-5">
                <form asp-area="Administration" asp-controller="Leagues" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-teamLegend" id="deleteButton">Delete</button>
                </form>
            </div>
        </div>
    </div>
</main>